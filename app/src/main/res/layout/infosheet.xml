<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/infosheet_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/slider"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="#E0E0E0"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="20dp"
            android:focusable="false"
            android:padding="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/smiley_face_flatline"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/infosheet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:focusable="false"
            android:fontFamily="@font/whitney"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/animated_emojis_warning_title"
            android:textColor="#7289DA"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/infosheet_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="15dp"
            android:focusable="false"
            android:fontFamily="@font/whitney"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/animated_emojis_warning_subtitle"
            android:textColor="#757575"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/infosheet_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/animated_emojis_warning_btncancel"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:backgroundTint="#424242"
                app:cornerRadius="6dp"
                app:elevation="5dp"
                app:fontFamily="@font/whitney"
                app:rippleColor="#2D2D2D" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/infosheet_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/animated_emojis_warning_btnok"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="6dp"
                app:elevation="5dp"
                app:fontFamily="@font/whitney"
                app:rippleColor="@color/colorPrimaryDark" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
