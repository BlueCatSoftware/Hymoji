<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_hymoji_premium" />

        <TextView
            android:id="@+id/activityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/whitney"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="@string/primium_price"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/activityTitle" />


        <ScrollView
            android:id="@+id/payment_features_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="20dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circular_payment_icons"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_round_emoji_emotions_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/whitney"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="4dp"
                            android:text="@string/premium_feature_1_title"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/whitney"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="@string/premium_feature_1_desc"
                            android:textColor="#757575"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circular_payment_icons"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_update_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/whitney"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="4dp"
                            android:text="@string/premium_feature_2_title"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/whitney"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="@string/premium_feature_2_desc"
                            android:textColor="#757575"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circular_payment_icons"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_attach_money_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/whitney"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="4dp"
                            android:text="@string/premium_feature_3_title"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/whitney"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="@string/premium_feature_3_desc"
                            android:textColor="#757575"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/premium_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="7dp"
            android:padding="16dp"
            android:text="@string/premium_go_btn"
            app:cornerRadius="@dimen/buttons_corners_radius"
            app:icon="@drawable/ic_outline_shopping_cart_24" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/webview_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#FFF"
        android:translationY="500dp"
        android:visibility="gone">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="creditCardNumber"
            android:importantForAutofill="auto" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="20dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:indeterminate="true"
                app:indicatorColor="@color/colorAccent"
                app:trackCornerRadius="10dp"
                app:trackThickness="6dp" />

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>


</RelativeLayout>