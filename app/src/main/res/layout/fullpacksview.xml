<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:ignore="ContentDescription"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<com.google.android.material.card.MaterialCardView
		android:id="@+id/cardview1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="9dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="9dp"
		android:layout_marginBottom="10dp"
		app:cardCornerRadius="12dp"
		app:strokeColor="#E0E0E0"
		app:strokeWidth="1dp"
		android:theme="@style/Theme.MaterialComponents.Light"
		app:cardElevation="0dp"
		android:clickable="true"
		app:rippleColor="#4E6F8ADB"
		android:focusable="true">
		<LinearLayout
			android:id="@+id/rootview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/imgback"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/emoji"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="80dp"
					android:src="@drawable/default_image"
					android:scaleType="centerCrop" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/space"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:baselineAligned="false">
				<LinearLayout
					android:id="@+id/tutorialBg"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/emptyTitle"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="7dp"
						android:layout_marginTop="10dp"
						android:layout_marginRight="7dp"
						android:paddingTop="4dp"
						android:paddingEnd="8dp"
						android:paddingStart="8dp"
						android:paddingBottom="8dp"
						android:text="@string/app_name"
						android:textSize="18sp"
						android:fontFamily="@font/whitney"
						android:textStyle="bold"
						android:textColor="#000000" />
					<TextView
						android:id="@+id/tutorialSubtitle"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="7dp"
						android:layout_marginRight="7dp"
						android:layout_marginBottom="5dp"
						android:paddingEnd="8dp"
						android:paddingStart="8dp"
						android:paddingBottom="8dp"
						android:text="@string/app_name"
						android:textSize="12sp"
						android:fontFamily="@font/whitney"
						android:textColor="#757575" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<TextView
						android:id="@+id/download_tv"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="7dp"
						android:layout_marginRight="7dp"
						android:layout_marginBottom="2dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="@string/app_name"
						android:textSize="18sp"
						android:fontFamily="@font/whitney"
						android:textStyle="bold"
						android:textColor="#000000" />
					<TextView
						android:id="@+id/activityDescription"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="7dp"
						android:layout_marginRight="7dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="@string/packs_included_emojis"
						android:textSize="12sp"
						android:fontFamily="@font/whitney"
						android:textColor="#757575" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</com.google.android.material.card.MaterialCardView>
</LinearLayout>
