<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:id="@+id/tutorialBg"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal|center_vertical">
		<LinearLayout
			android:id="@+id/sheetBehavior"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			app:layout_behavior="@string/bottom_sheet_behavior"
			app:behavior_hideable="true">
			<LinearLayout
				android:id="@+id/background"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginTop="10dp"
				android:background="#FFFFFF"
				android:orientation="vertical"
				android:layout_weight="1"
				android:animateLayoutChanges="true"
				android:elevation="10dp">
				<LinearLayout
					android:id="@+id/slider"
					android:layout_width="40dp"
					android:layout_height="5dp"
					android:layout_marginTop="16dp"
					android:background="#E0E0E0"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal" />
				<TextView
					android:id="@+id/download_tv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="6dp"
					android:layout_marginRight="10dp"
					android:padding="8dp"
					android:text="@string/explore_packs_title"
					android:textSize="30sp"
					android:fontFamily="@font/whitney"
					android:textStyle="bold"
					android:textColor="#000000" />
				<TextView
					android:id="@+id/activityDescription"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:text="@string/explore_packs_subtitle"
					android:textSize="14sp"
					android:fontFamily="@font/whitney"
					android:textColor="#616161" />
				<LinearLayout
					android:id="@+id/line"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="15dp"
					android:background="#E0E0E0"
					android:orientation="horizontal" />
				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/packsRecycler"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="5dp"
					android:background="#FFFFFF"
					android:requiresFadingEdge="vertical"
					android:fadingEdgeLength="20dp"
					android:visibility="gone" />
				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/loadingRecycler"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="5dp"
					android:background="#FFFFFF" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/adviewline"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#E0E0E0"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/adview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF"
				android:orientation="vertical" />
		</LinearLayout>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
