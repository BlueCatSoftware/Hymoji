<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorialBg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    tools:ignore="UselessParent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview2"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:rippleColor="#4E6F8ADB"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:focusable="false"
                android:scaleType="fitCenter"
                android:src="@drawable/round_more_horiz_black_48dp"
                app:tint="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:fontFamily="@font/whitney"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/home_pack_seemore2"
                android:textColor="#757575"
                android:textSize="12sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:rippleColor="#4E6F8ADB"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:id="@+id/rootview"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/emojisHolder"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/emoji"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:forceDarkAllowed="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/circular_payment_icons"
                    tools:targetApi="q" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/emoji0"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:forceDarkAllowed="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo"
                        tools:targetApi="q" />

                    <ImageView
                        android:id="@+id/emoji1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:forceDarkAllowed="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo"
                        tools:targetApi="q" />

                    <ImageView
                        android:id="@+id/emoji2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:forceDarkAllowed="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo"
                        tools:targetApi="q" />

                    <ImageView
                        android:id="@+id/emoji3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:forceDarkAllowed="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo"
                        tools:targetApi="q" />

                    <ImageView
                        android:id="@+id/emoji4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:forceDarkAllowed="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo"
                        tools:targetApi="q" />


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/pack_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:focusable="false"
                android:fontFamily="@font/whitney"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pack_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:focusable="false"
                android:fontFamily="@font/whitney"
                android:lines="2"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="@string/app_name"
                android:textColor="#757575"
                android:textSize="12sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>