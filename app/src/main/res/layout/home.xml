                            android:paddingTop="10dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="10dp">

                            <ImageView
                                android:id="@+id/imageview3"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/round_settings_black_48dp"
                                app:tint="#F8980B" />

                            <TextView
                                android:id="@+id/dock_txt_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:singleLine="true"
                                android:text="@string/home_dock3_title"
                                android:textColor="#212121"
                                android:fontFamily="@font/whitney"
                                android:textStyle="bold"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:singleLine="true"
                                android:text="@string/home_dock3_subtitle"
                                android:textColor="#757575"
                                android:fontFamily="@font/whitney"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dock4"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="#F4F0FF"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="8dp"
                            android:paddingTop="10dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="10dp">

                            <ImageView
                                android:id="@+id/imageview5"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/round_help_black_48dp"
