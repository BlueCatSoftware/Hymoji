                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="8dp"
                            android:paddingTop="10dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="10dp">

                            <ImageView
                                android:id="@+id/imageview2"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/round_emoji_emotions_black_48dp"
                                app:tint="#F84D00" />

                            <TextView
                                android:id="@+id/dock_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:singleLine="true"
                                android:text="@string/home_dock1_title"
                                android:textColor="#212121"
                                android:fontFamily="@font/whitney"
                                android:textStyle="bold"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:id="@+id/linear51"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="4dp">

                                <TextView
                                    android:id="@+id/emojisCounter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/whitney"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:singleLine="true"
                                    android:text="@string/home_dock1_subtitle"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/whitney"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dock2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="#FAECFD"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="8dp"
                            android:paddingTop="10dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="10dp">

                            <ImageView
                                android:id="@+id/imageview4"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
