                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#EEEEEE"
                            android:orientation="vertical"
                            android:padding="8dp"
                            app:shimmer_auto_start="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/shimmer2"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmer2_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#EEEEEE"
                            android:orientation="vertical"
                            android:padding="8dp"
                            app:shimmer_auto_start="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear43"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/shimmer3"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/linear42"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EEEEEE"
                                android:orientation="vertical"
                                android:padding="8dp"
                                app:shimmer_auto_start="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shimmer4"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/shimmer4_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EEEEEE"
                                android:orientation="vertical"
                                android:padding="8dp"
                                app:shimmer_auto_start="true" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear46"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="14dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/shimmer6"
                            android:layout_width="match_parent"
